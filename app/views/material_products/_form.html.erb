<%= form_for @material_product, :html => { :class => "form-horizontal material_product" } do |f| %>

  <% if @material_product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@material_product.errors.count, "error") %> prohibited this material_product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @material_product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :material_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :material_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:material_id) %>
  </div>
  <div class="form-group">
    <%= f.label :product_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :product_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:product_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                material_products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
