<%= form_for @attendance, :html => { :class => "form-horizontal attendance" } do |f| %>

  <% if @attendance.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@attendance.errors.count, "error") %> prohibited this attendance from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @attendance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :employee_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :employee_id, Employee.all, :id, :first_name, prompt:"Select Employee", :class => 'form-control' %>
    </div>
    <%=f.error_span(:employee_id) %>
  </div>
  <div class="form-group">
    <%= f.label :day, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :day, :class => 'form-control' %>
    </div>
    <%=f.error_span(:day) %>
  </div>
  <div class="form-group">
    <%= f.label :full_day, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :full_day %>
    </div>
    <%=f.error_span(:full_day) %>
  </div>
  <div class="form-group">
    <%= f.label :half_day, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :half_day %>
    </div>
    <%=f.error_span(:half_day) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                attendances_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
