<%- model_class = Company -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @company.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:p_a_n_number) %>:</strong></dt>
  <dd><%= @company.p_a_n_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:t_i_n_no) %>:</strong></dt>
  <dd><%= @company.t_i_n_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vat_sales) %>:</strong></dt>
  <dd><%= @company.vat_sales %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vat_purchase) %>:</strong></dt>
  <dd><%= @company.vat_purchase %></dd>
  <dt><strong><%= model_class.human_attribute_name(:adress) %>:</strong></dt>
  <dd><%= @company.adress %></dd>
  <dt><strong><%= model_class.human_attribute_name(:owner) %>:</strong></dt>
  <dd><%= @company.owner %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              companies_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_company_path(@company), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              company_path(@company),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
