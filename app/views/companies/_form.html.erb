<%= form_for @company, :html => { :class => "form-horizontal company" } do |f| %>

  <% if @company.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @company.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :p_a_n_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :p_a_n_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:p_a_n_number) %>
  </div>
  <div class="form-group">
    <%= f.label :t_i_n_no, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :t_i_n_no, :class => 'form-control' %>
    </div>
    <%=f.error_span(:t_i_n_no) %>
  </div>
  <div class="form-group">
    <%= f.label :vat_sales, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :vat_sales, :class => 'form-control' %>
    </div>
    <%=f.error_span(:vat_sales) %>
  </div>
  <div class="form-group">
    <%= f.label :vat_purchase, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :vat_purchase, :class => 'form-control' %>
    </div>
    <%=f.error_span(:vat_purchase) %>
  </div>
  <div class="form-group">
    <%= f.label :adress, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :adress, :class => 'form-control' %>
    </div>
    <%=f.error_span(:adress) %>
  </div>
  <div class="form-group">
    <%= f.label :owner, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :owner, :class => 'form-control' %>
    </div>
    <%=f.error_span(:owner) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                companies_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
