<%- model_class = Account -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:company_id) %>:</strong></dt>
  <dd><%= @account.company_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:invoice_id) %>:</strong></dt>
  <dd><%= @account.invoice_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:bill_id) %>:</strong></dt>
  <dd><%= @account.bill_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:recieve_payment_id) %>:</strong></dt>
  <dd><%= @account.recieve_payment_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expense_id) %>:</strong></dt>
  <dd><%= @account.expense_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              accounts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_account_path(@account), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              account_path(@account),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
