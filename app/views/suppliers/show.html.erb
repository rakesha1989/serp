<%- model_class = Supplier -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @supplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @supplier.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @supplier.phone_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:info) %>:</strong></dt>
  <dd><%= @supplier.info %></dd>
  <dt><strong><%= model_class.human_attribute_name(:p_a_n_no) %>:</strong></dt>
  <dd><%= @supplier.p_a_n_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:t_i_n_no) %>:</strong></dt>
  <dd><%= @supplier.t_i_n_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:c_s_t_reg) %>:</strong></dt>
  <dd><%= @supplier.c_s_t_reg %></dd>
  <dt><strong><%= model_class.human_attribute_name(:key_contact_person) %>:</strong></dt>
  <dd><%= @supplier.key_contact_person %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              suppliers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_supplier_path(@supplier), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              supplier_path(@supplier),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
