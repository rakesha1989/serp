<%= form_for @despatch, :html => { :class => "form-horizontal despatch" } do |f| %>

  <% if @despatch.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@despatch.errors.count, "error") %> prohibited this despatch from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @despatch.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :day, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.date_field :day, :class => 'form-control' %>
    </div>
    <%=f.error_span(:day) %>
  </div>
  <div class="form-group">
    <%= f.label :product_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :product_id, Product.all, :id, :name, prompt:"Select Product", :class => 'form-control' %>
    </div>
    <%=f.error_span(:product_id) %>
  </div>
  <div class="form-group">
    <%= f.label :quantity, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :quantity, :class => 'form-control' %>
    </div>
    <%=f.error_span(:quantity) %>
  </div>
  <div class="form-group">
    <%= f.label :unit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :unit, %w[Kgs No's], :class => 'form-control' %>
    </div>
    <%=f.error_span(:unit) %>
  </div>
  <div class="form-group">
    <%= f.label :client_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :client_id, Client.all, :id, :name, prompt:"select Client", :class => 'form-control' %>
    </div>
    <%=f.error_span(:client_id) %>
  </div>
  <div class="form-group">
    <%= f.label :d_c_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :d_c_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:d_c_number) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                despatches_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
