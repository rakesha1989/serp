<%= form_for @client, :html => { :class => "form-horizontal client" } do |f| %>

  <% if @client.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @client.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :name,  :class => 'form-control' %>
    </div>
    <%=f.error_span(:name) %>
  </div>
  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :address, :size=>"50", placeholder: "Write Address ", :maxlength=>"254",:class => 'form-control'%>
    </div>
    <%=f.error_span(:address) %>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :phone_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:phone_number) %>
  </div>
  <div class="form-group">
    <%= f.label :info, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :info, :class => 'form-control' %>
    </div>
    <%=f.error_span(:info) %>
  </div>
  <div class="form-group">
    <%= f.label :p_a_n_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :p_a_n_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:p_a_n_number) %>
  </div>
  <div class="form-group">
    <%= f.label :t_i_n_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :t_i_n_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:t_i_n_number) %>
  </div>
  <div class="form-group">
    <%= f.label :c_s_t_reg, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :c_s_t_reg, :class => 'form-control' %>
    </div>
    <%=f.error_span(:c_s_t_reg) %>
  </div>
  <div class="form-group">
    <%= f.label :key_contact_person, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :key_contact_person, :class => 'form-control' %>
    </div>
    <%=f.error_span(:key_contact_person) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                clients_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
