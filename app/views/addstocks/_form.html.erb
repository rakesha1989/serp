<%= form_for @addstock, :html => { :class => "form-horizontal addstock" } do |f| %>

  <% if @addstock.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@addstock.errors.count, "error") %> prohibited this addstock from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @addstock.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :stock, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :stock, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stock) %>
  </div>
  <div class="form-group">
    <%= f.label :unit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.select :unit, %w[Kgs no's], :class => 'form-control' %>
    </div>
    <%=f.error_span(:unit) %>
  </div>
  <div class="form-group">
    <%= f.label :material_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select :material_id, Material.all, :id, :name, prompt:"select Material", :class => 'form-control' %>
    </div>
    <%=f.error_span(:material_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addstocks_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
