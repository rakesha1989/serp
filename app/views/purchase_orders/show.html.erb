<%- model_class = PurchaseOrder -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @purchase_order.supplier.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:material_id) %>:</strong></dt>
  <dd><%= @purchase_order.material.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:p_o_date) %>:</strong></dt>
  <dd><%= @purchase_order.p_o_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:shipping_address) %>:</strong></dt>
  <dd><%= @purchase_order.shipping_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ship_to) %>:</strong></dt>
  <dd><%= @purchase_order.ship_to %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @purchase_order.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:quantity) %>:</strong></dt>
  <dd><%= @purchase_order.quantity %></dd>
  <dt><strong><%= model_class.human_attribute_name(:unit) %>:</strong></dt>
  <dd><%= @purchase_order.unit %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @purchase_order.rate %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @purchase_order.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tax) %>:</strong></dt>
  <dd><%= @purchase_order.tax %></dd>
  <dt><strong><%= model_class.human_attribute_name(:message) %>:</strong></dt>
  <dd><%= @purchase_order.message %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              purchase_orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchase_order_path(@purchase_order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchase_order_path(@purchase_order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%=link_to "Generate Purchase Order", purchase_order_path(format: :pdf)%>

